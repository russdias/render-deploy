{
  "name": "render-deploy-action",
  "description": "GitHub Actions Render Deploy Action",
  "version": "1.0.2",
  "author": "Russ Dias",
  "private": true,
  "homepage": "https://github.com/russdias/render-deploy-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/russdias/render-deploy-action.git"
  },
  "bugs": {
    "url": "https://github.com/russdias/render-deploy-action/issues"
  },
  "keywords": [
    "actions",
    "node",
    "render",
    "deploy"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=21"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "local-action": "npx local-action . src/main.ts .env",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "all": "npm run format:write && npm run lint && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@github/local-action": "^2.2.1",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.17.0",
    "eslint-plugin-jsonc": "^2.18.2",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "prettier-eslint": "^16.3.0",
    "typescript": "^5.7.2"
  }
}
